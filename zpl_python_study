import os

def paneControl():
  print(' ')
  div = int(input("Divisor ? "))
  print(' ')
  try:
    NUM = 4 / div 
    print('Resultado = ',NUM)
  except:
    print('Deu Bode Preto!')
  print(' ')
  print('Case Closed')
  print(' ')

def fatorial(n):
  if (n == 0):
    fat = 1
  else:
    fat=1
    j=1
  while (j<=n):
    fat = fat*j
    j = j + 1
  return fat

